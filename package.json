{
  "name": "obelisk-skiller-backend",
  "version": "1.0.0",
  "description": "TypeScript backend service for Runara character and skill management",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "node scripts/copy-sprites.js",
    "build": "tsc && npm run copy-public",
    "copy-public": "node scripts/copy-public.js",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "npx jest",
    "migrate": "node dist/scripts/migrate.js",
    "test:cnft-update": "node scripts/test-cnft-update.js",
    "test:image-gen": "tsx scripts/test-image-generation.ts",
    "test:offchain": "tsx scripts/test-offchain/test-runner.ts",
    "test:offchain:cleanup": "tsx scripts/test-offchain/test-runner.ts --cleanup",
    "test:offchain:check-env": "tsx scripts/test-offchain/check-env.ts",
    "runara:setup": "node scripts/setup-runara-fresh.js",
    "runara:setup:confirm": "node scripts/setup-runara-fresh.js --confirm"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.970.0",
    "@coral-xyz/anchor": "^0.30.1",
    "@metaplex-foundation/mpl-bubblegum": "^5.0.2",
    "@metaplex-foundation/mpl-token-metadata": "^3.4.0",
    "@metaplex-foundation/umi": "^1.2.0",
    "@metaplex-foundation/umi-bundle-defaults": "^1.2.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.95.8",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "sharp": "^0.34.5",
    "tweetnacl": "^1.0.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.23",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@metaplex-foundation/digital-asset-standard-api": "2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "solana",
    "cnft",
    "blockchain",
    "gaming",
    "typescript"
  ],
  "author": "Runara Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Obelisk-Protocol/runara-skiller.git"
  },
  "bugs": {
    "url": "https://github.com/Obelisk-Protocol/runara-skiller/issues"
  },
  "homepage": "https://github.com/Obelisk-Protocol/runara-skiller#readme"
}
